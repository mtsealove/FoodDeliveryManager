<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent"
        android:padding="10dp">
            <ImageView android:layout_width="80dp" android:layout_height="80dp"
                       android:layout_centerVertical="true"
                       android:id="@+id/imgIv" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@id/imgIv"
                      android:id="@+id/nameTv"
                      android:text="상품명"
                      android:textSize="18sp"
                      android:textColor="@color/black"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_below="@id/nameTv"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@id/imgIv"
                      android:id="@+id/priceTv"
                      android:text="가격"
                      android:textSize="18sp"
                      android:textColor="@color/blue"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_below="@id/priceTv"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@id/imgIv"
                      android:id="@+id/totalTv"
                      android:text="매출액"
                      android:textSize="18sp"
                      android:textColor="@color/red"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
